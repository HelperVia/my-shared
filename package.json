{
  "name": "@helpervia/shared",
  "version": "1.0.0",
  "description": "Shared types, constants, utilities, hooks and contexts for frontend and backend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./lib": "./dist/shared/lib/index.js",
    "./lib/*": "./dist/shared/lib/*/index.js",
    "./hooks": "./dist/shared/hooks/index.js",
    "./utils": "./dist/shared/utils/index.js",
    "./constants": "./dist/shared/constants/index.js",
    "./types": "./dist/shared/types/index.js",
    "./context": "./dist/shared/context/index.js",
    "./middleware": "./dist/shared/middleware/index.js",
    "./pages": "./dist/shared/(pages)/index.js"
  },
  "typesVersions": {
    "*": {
      "lib": [
        "./dist/shared/lib/index.d.ts"
      ],
      "lib/*": [
        "./dist/shared/lib/*/index.d.ts"
      ],
      "hooks": [
        "./dist/shared/hooks/index.d.ts"
      ],
      "utils": [
        "./dist/shared/utils/index.d.ts"
      ],
      "constants": [
        "./dist/shared/constants/index.d.ts"
      ],
      "types": [
        "./dist/shared/types/index.d.ts"
      ],
      "context": [
        "./dist/shared/context/index.d.ts"
      ],
      "middleware": [
        "./dist/shared/middleware/index.d.ts"
      ],
      "pages": [
        "./dist/shared/(pages)/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "node watermark.js",
    "build:dev": "tsc",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "shared",
    "types",
    "utilities",
    "hooks",
    "nextjs",
    "react"
  ],
  "author": "HelperVia",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "axios": "^1.13.4",
    "react-device-detect": "^2.2.3",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "next": "^16.1.6",
    "next-auth": "^4.24.13",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "axios": ">=1.13.4",
    "react-device-detect": ">=2.2.3",
    "next": ">=16.1.6",
    "next-auth": ">=4.24.13",
    "react": ">=19.2.4",
    "react-dom": ">=19.2.4",
    "zod": ">=4.3.6"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": true
    },
    "react-device-detect": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "next-auth": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HelperVia/my-shared.git"
  }
}
